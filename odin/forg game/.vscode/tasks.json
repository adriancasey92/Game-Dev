{
    "version": "2.0.0",
    "command": "",
    "args": [],
    "tasks": [
        {
            "label": "Build Debug",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}/run.bat",
            },
            "group": "build"
        },
        {
            "label": "Build Release",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}/build_release.bat",
            },
            "group": "build"
        },
        {
            "label": "mkdir",
            "type": "shell",
            "command": "cmd",
            "args": [
                "/C",
                "if not exist .\\build mkdir .\\build"
            ]
        },
        {
            "label": "build",
            "type": "shell",
            "command": "odin build . -debug -out:build/debug.exe",
            "group": "build"
        },
        {
            "label": "Build",
            "dependsOn": [
                "mkdir",
                "build"
            ]
        }
    ]
}